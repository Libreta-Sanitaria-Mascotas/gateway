NODE_ENV=development
PORT=3000

# Microservice hosts (Docker dev)
USER_SERVICE=user
USER_SERVICE_PORT=3002
AUTH_SERVICE=auth
AUTH_SERVICE_PORT=3001
PET_SERVICE=pet
PET_SERVICE_PORT=3003
HEALTH_SERVICE=health
HEALTH_SERVICE_PORT=3004

# Media service HTTP endpoint
MEDIA_SERVICE_URL=http://media:3005/api
# Optional API key to call Media (align with media/.env)
MEDIA_API_KEY=dev-media-key

# Auth
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# RabbitMQ (opcional si quieres parametrizar la URL de los microservicios)
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123

# Logging
LOG_LEVEL=debug

# CORS (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006,http://localhost:8081
