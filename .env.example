NODE_ENV=development
PORT=3000

# Microservice hosts (DNS resolvable in your env)
USER_SERVICE=user
USER_SERVICE_PORT=3002
AUTH_SERVICE=auth
AUTH_SERVICE_PORT=3001
PET_SERVICE=pet
PET_SERVICE_PORT=3003
HEALTH_SERVICE=health
HEALTH_SERVICE_PORT=3004

# Media service HTTP endpoint (usado por Gateway para uploads)
# docker-compose: http://media:3005/api
# local (sin containers): http://localhost:3005/api
MEDIA_SERVICE_URL=http://media:3005/api

# Auth
JWT_SECRET=your_secret_here
JWT_EXPIRES_IN=15m

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Logging
LOG_LEVEL=debug

# CORS (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006,http://localhost:8081

# RabbitMQ
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123
